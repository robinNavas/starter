{
  "extends": "airbnb-base",
  "env": {
      "browser": true,
      "node": true
  },
  "rules": {
    "class-methods-use-this": 0,
    "no-useless-constructor": 0,
    "import/no-unresolved": 0,
    "no-unused-expressions": [
      "error", 
      { 
        "allowShortCircuit": true,
        "allowTernary": true
      }]
  }
}